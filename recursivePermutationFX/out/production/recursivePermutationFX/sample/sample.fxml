<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="btnCompute" mnemonicParsing="false" onAction="#btnComputeOnAction"
                        text="Compute permutations" GridPane.rowIndex="2">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Button fx:id="btnQuit" mnemonicParsing="false" onAction="#btnQuitOnAction" text="Quit"
                        GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <TextField fx:id="txtInput" GridPane.columnIndex="1"/>
                <TextArea fx:id="txtResult"  editable="false" prefHeight="137.0" prefWidth="300.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="1"/>
                <Label alignment="CENTER" text="String: ">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Label text="Permutations:" GridPane.rowIndex="1">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </children>
        </GridPane>
    </children>
</AnchorPane>
